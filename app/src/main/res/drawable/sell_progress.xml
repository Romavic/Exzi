<!-- res/drawable/progress_bar_progress.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <solid android:color="#00000000"/> <!-- Cor de fundo -->
            <corners android:radius="0dp"/> <!-- Remove os cantos arredondados -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#F65454"/> <!-- Cor do progresso -->
                <corners android:radius="0dp"/> <!-- Remove os cantos arredondados -->
            </shape>
        </clip>
    </item>
</layer-list>
